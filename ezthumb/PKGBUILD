# Maintainer: masutu <masutu dot arch at gmail dot com>
pkgname=ezthumb
pkgver=1.5.6
pkgrel=1
pkgdesc="A video thumbnail generator based on ffmpeg."
arch=('i686')
url="http://sourceforge.net/projects/ezthumb/"
license=('GPL3')
depends=('ffmpeg' 'gd')
source=(http://downloads.sourceforge.net/project/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('b8910ecbad5564fa78219f774a49e3b6')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i 's#all: version smm $(TARGET) install#all: version smm $(TARGET)#' Makefile
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm0755 ezthumb ${pkgdir}/usr/bin/ezthumb
  install -Dm0644 ezthumb.1 ${pkgdir}/usr/share/man/man1/ezthumb.1
}

# vim:set ts=2 sw=2 et:
