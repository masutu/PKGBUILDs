# Maintainer: masutu <masutu dot arch at gmail dot com>
pkgname=etherdump
pkgver=2.10
pkgrel=1
pkgdesc="An extremely small packet sniffer."
arch=('i686' 'x86_64')
url="http://freshmeat.net/projects/etherdump/"
license=('GPL')
source=(http://sourceforge.net/projects/psydev/files/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz)
md5sums=('b207b74a9e1fa945dcd0b55725384c8b')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm 755 etherdump $pkgdir/usr/bin/etherdump
  install -Dm 644 README $pkgdir/usr/share/doc/etherdump/README
}

# vim:set ts=2 sw=2 et:
